@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Product Admin - Dashboard HTML Template</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <!-- https://fonts.google.com/specimen/Roboto -->
    <link rel="stylesheet" href="~/Content/fontawesome.min.css">
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/Content/templatemo-style.css">
    <!--
    Product Admin CSS Template
    https://templatemo.com/tm-524-product-admin
    -->
</head>

<body id="reportsPage">
    <div class="" id="home">
        <nav class="navbar navbar-expand-xl">
            <div class="container h-100">
                <a class="navbar-brand" href="~/Admin/">
                    <h1 class="tm-site-title mb-0">Admin DASHBOARD</h1>
                </a>
                <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars tm-nav-icon"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto h-100">
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Admin/" id="AllMemberBTN">
                                <i class="fas fa-users"></i>
                                ALL MEMBERS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/AllPosts" id="PostsBTN">
                                <i class="far fa-file-alt"></i>
                                Posts
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/EditProfile" id="EditProfileBTN">
                                <i class="far fa-user"></i>
                                Accounts
                            </a>
                        </li>
                    </ul>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                @Html.ActionLink("Hi, " + User.Identity.GetUserName(), "EditProfile", "Admin", null, new { @class = "nav-link d-block" })
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-block" href="javascript:document.getElementById('logoff').submit()">Logout</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>

        @RenderBody()

        <footer class="tm-footer row tm-mt-small">
            <div class="col-12 font-weight-light">
                <p class="text-center text-white mb-0 px-4 small">
                    Copyright &copy; <b>2021</b> All rights reserved.

                    Design: M3LSH&trade;
                </p>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="~/Scripts/moment.min.js"></script>
    <!-- https://momentjs.com/ -->
    <script src="~/Scripts/Chart.min.js"></script>
    <!-- http://www.chartjs.org/docs/latest/ -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
    <script src="~/Scripts/tooplate-scripts.js"></script>
    <script>
        Chart.defaults.global.defaultFontColor = 'white';
        let ctxLine,
            ctxBar,
            ctxPie,
            optionsLine,
            optionsBar,
            optionsPie,
            configLine,
            configBar,
            configPie,
            lineChart,
            barChart;
        // DOM is ready
        $(function () {
            drawLineChart(); // Line Chart
            drawBarChart(); // Bar Chart
            drawPieChart(); // Pie Chart

            $(window).resize(function () {
                updateLineChart();
                updateBarChart();
            });
        })
    </script>
</body>

</html>