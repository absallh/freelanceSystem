<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header class="Allheader">
        <h1>Client Page</h1>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
        {
        @Html.AntiForgeryToken()
        <a class="btn" style="position: absolute; top:10px;right:5px;" role="button" 
           href="javascript:document.getElementById('logoff').submit()">Logout</a>
        }
    </header>

    <div class=" bodycontainer">
        <div class="navbar-client">
            <a class="nav-client" href="../Client/Profile">Profile </a>
            <a class="nav-client" href="../Client/CreateNewPost">Create New post</a>
            <a class="nav-client" href="../Client/MyPosts"> My Posts </a>
            <a class="nav-client " href="../Client/ReceivedProposals">Received proposals</a>
        </div>
        @RenderBody()
    </div>
    <footer class="Allfooter"> all © copyrights reserved</footer>

</body>
</html>
