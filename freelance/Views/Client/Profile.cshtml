@model w.Models.RegisterViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h4>All form elements</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Profile", "Client", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Email</label>
                                <div class="col-lg-8">
                                    @Html.EditorFor(model => model.Email, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                        style = "display: none",
                                            id = "EmailDisplay"
                                        }
                                    })
                                    <input type="text" placeholder="Disabled input here..." class="form-control" id="emailInput" disabled>
                                    <script>
                                        document.querySelector('#emailInput').value = document.querySelector('#EmailDisplay').value;
                                    </script>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">First Name</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Last Name</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Phone</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Rewrite Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <div class="col-sm-8 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>