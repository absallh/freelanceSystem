@model IEnumerable<w.Models.ProposalViewModel>
@{
    ViewBag.Title = "ReceivedProposals";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";
}

<div class="row">
    @using (Html.BeginForm("ReceivedProposals", "Client", FormMethod.Post, new { id = "actionType", choice = "actionType", @class = "col-lg-12" }))
    {
        <script>
            function AcceptProposal(id,Choice) {
                document.getElementById('custId').value = id;
                document.getElementById('choice').value = Choice;
                document.getElementById('actionType').submit();
            }

        </script>
        <input type="hidden" id="custId" name="id">
        <input type="hidden" id="choice" name="choice">
        <div class="card">
            <div class="card-header">
                <h4>Striped table with hover effect</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Post txt</th>
                                <th>freelancer name</th>
                                <th>time</th>
                                <th>State</th>
                                <td>Actions</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(Model => item.PostText)</th>
                                    <td>@Html.DisplayFor(Model => item.FreeLancerName)</td>
                                    <td>@Html.DisplayFor(Model => item.Time)</td>
                                    <td>@Html.DisplayFor(Model => item.State)</td>
                                    <td>
                                        <button type="submit" class="btn btn-secondary" onclick="AcceptProposal( '@Html.DisplayFor(Model => item.RowId)' ,'False' )">Cancel</button>
                                        <button type="submit" class="btn btn-primary" onclick="AcceptProposal( '@Html.DisplayFor(Model => item.RowId)','true' )">Accept</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>