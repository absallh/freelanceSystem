@model w.Models.LoginRegisterViewModel
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_WallLayout.cshtml";
}

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="width: 100%;">
                    <div class="card-header d-flex align-items-center">
                        <h4>All form elements</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("EditProfile", "Freelancer", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Email</label>
                                <div class="col-lg-8">
                                    @Html.EditorFor(model => model.register.Email, new { htmlAttributes = new { id = "EmailDisplay", style = "display: none;" } })
                                    <input type="text" value="" id="emailInput" class="form-control validate" style="color: black" disabled />
                                    <script>
                                        document.querySelector('#emailInput').value = document.querySelector("#EmailDisplay").value;
                                    </script>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">First Name</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.register.firstName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Last Name</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.register.lastName, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="text-small text-gray help-block-none">A block of help text that breaks onto a new line and may extend beyond one line.</span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Phone</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.register.phone, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-lg-4 form-control-label">Rewrite Password</label>
                                <div class="col-sm-8">
                                    <input type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <div class="col-sm-12 offset-sm-2">
                                    <button type="submit" class="btn btn-primary" style="width: auto;">Save changes</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>